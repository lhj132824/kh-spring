	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- setYear이면 name에 year만 작성 -->
	<bean id="dateBean" class="java.util.Date">
		<property name="year" value="121"/>
		<property name="month" value="9"/>
		<property name="date" value="9"/>
	</bean>

	<bean id="scoreBean" class="test03.Score">
		<constructor-arg name="name" value="이호준"/>
		<constructor-arg name="kor" value="100"/>
		<constructor-arg name="eng" value="10"/>
	</bean>
	
	<bean id="beanTest" class="test03.BeanTest">
		<constructor-arg name="date" ref="dateBean"/>
		<property name="score" ref="scoreBean"/>
		<property name="boolean" ref="true"/>
		<property name="number" ref="10.5"/>
		<property name="array">
			<array>
				<value>홍길동</value>
				<value>이순신</value>
				<value>김선달</value>
			</array>
		</property>
		<property name="list">
			<list>
				<value>봄</value>
				<value>여름</value>
				<value>가을</value>
				<value>겨울</value>
			</list>
		</property>
		<property name="set">
			<set>
				<value>1</value>
				<value>2</value>
				<value>3</value>
				<value>4</value>
			</set>
		</property>
		<property name="map">
			<map>
				<entry>
					<key><value>spring</value></key>d
					<value>봄</value>
				</entry>
				<entry key="summer" value="여름"/>
				<entry key="fall" value="가을"/>
				<entry key="winter" value="겨울"/>
			</map>
		</property>
		<property name="properties">
			<props>
				<prop key="sky">하늘</prop>
				<prop key="ground">땅</prop>
			</props>
		</property>
	</bean>
</beans>
